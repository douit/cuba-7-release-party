<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.rtcab.c7rp.web.location.LocationBrowse"
        focusComponent="locationsTable"
        lookupComponent="locationsTable"
        messagesPack="com.rtcab.c7rp.web.location">
    <dsContext>
        <groupDatasource id="locationsDs"
                         class="com.rtcab.c7rp.entity.Location"
                         view="_local">
            <query>
                <![CDATA[select e from c7rp$Location e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="locationsTable"
            spacing="true">
        <filter id="filter"
                applyTo="locationsTable"
                datasource="locationsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="locationsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="street"/>
                <column id="postcode"/>
                <column id="city"/>
                <column id="size"/>
            </columns>
            <rows datasource="locationsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="locationsTable.create"/>
                <button id="editBtn"
                        action="locationsTable.edit"/>
                <button id="removeBtn"
                        action="locationsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
